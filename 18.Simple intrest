import java.util.Scanner;
public class SimpleInterestCalculator
{
public static void main(String[] args)
{
Scanner sc = new Scanner(System.in);
System.out.println("Enter the principal amount:");
double principal = sc.nextDouble();
System.out.println("Enter the number of years:");
int years = scanner.nextInt();
System.out.println("Is the customer a senior citizen? (y/n):");
char isSeniorCitizen = scanner.next().charAt(0);
//condition ? expression_if_true : expression_if_false;
if (principal > 0 && years >= 0) {
double rateOfInterest = (isSeniorCitizen == 'y') ? 0.12 : 0.10;
double interest = principal * rateOfInterest * years;
System.out.println("Interest: " + interest);
} else {
System.out.println("Invalid input. Please enter valid principal and years.");
}
}
}
